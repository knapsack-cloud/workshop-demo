{
  "name": "@knapsack-cloud/workshop-demo-styles",
  "description": "Knapsack Workshop Demo Styles",
  "version": "0.1.55",
  "main": "styles.js",
  "style": "dist/styles.css",
  "scripts": {
    "build": "NODE_ENV=production yarn build:styles",
    "build:styles": "postcss ./src/styles.css -o ./dist/styles.css & postcss ./src/default.css -o ./dist/default.css & postcss ./src/wow.css -o ./dist/wow.css",
    "watch:styles": "nodemon --watch 'src/**/*' --ext 'css' --watch '../../data/knapsack.design-tokens.json' --exec 'yarn build:styles'",
    "start": "run-s watch:*",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@knapsack-cloud/workshop-demo-design-tokens": "^0.1.55"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.0.1",
    "tailwindcss": "^2.2.19"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "url": "https://github.com/knapsack-cloud/workshop-demo",
    "directory": "packages/styles"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
